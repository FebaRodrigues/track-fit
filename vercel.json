{
  "version": 2,
  "builds": [
    {
      "src": "fitness-tracker/Client/gym/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist",
        "buildCommand": "cd fitness-tracker/Client/gym && npm install && npm run build"
      }
    },
    {
      "src": "fitness-tracker/Server/server.js",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/fitness-tracker/Server/server.js" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
} 