{
  "version": 2,
  "builds": [
    {
      "src": "fitness-tracker/Client/gym/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist",
        "buildCommand": "npm run build"
      }
    },
    {
      "src": "fitness-tracker/Server/server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/fitness-tracker/Server/server.js"
    },
    {
      "src": "^/assets/(.*)",
      "dest": "/fitness-tracker/Client/gym/dist/assets/$1"
    },
    {
      "src": "^/test-diagnostic.html",
      "dest": "/fitness-tracker/Client/gym/public/test-diagnostic.html"
    },
    {
      "src": "^/_app-fallback.html",
      "dest": "/fitness-tracker/Client/gym/public/_app-fallback.html"
    },
    {
      "src": "^/favicon\\.ico",
      "dest": "/fitness-tracker/Client/gym/dist/favicon.ico"
    },
    {
      "src": "^/manifest\\.json",
      "dest": "/fitness-tracker/Client/gym/dist/manifest.json"
    },
    {
      "src": "^/robots\\.txt",
      "dest": "/fitness-tracker/Client/gym/dist/robots.txt"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/fitness-tracker/Client/gym/dist/index.html",
      "headers": {
        "Cache-Control": "no-cache, no-store, must-revalidate"
      },
      "continue": true
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "X-Frame-Options", "value": "DENY" },
        { "key": "X-XSS-Protection", "value": "1; mode=block" }
      ]
    },
    {
      "source": "/assets/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
} 