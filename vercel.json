{
  "version": 2,
  "buildCommand": "cd fitness-tracker/Client/gym && npm install && npm run build",
  "outputDirectory": "fitness-tracker/Client/gym/dist",
  "functions": {
    "api/**/*": {
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Credentials", "value": "true" },
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "GET,OPTIONS,PATCH,DELETE,POST,PUT" },
        { "key": "Access-Control-Allow-Headers", "value": "X-CSRF-Token, X-Requested-With, Accept, Accept-Version, Content-Length, Content-MD5, Content-Type, Date, X-Api-Version, Authorization" }
      ]
    }
  ],
  "routes": [
    { "src": "/api/health", "dest": "/api/health.js" },
    { "src": "/api/users/login", "dest": "/api/users/login.js" },
    { "src": "/api/users/register", "dest": "/api/users/register.js" },
    { "src": "/api/trainers/login", "dest": "/api/trainers/login.js" },
    { "src": "/api/trainers/register", "dest": "/api/trainers/register.js" },
    { "src": "/api/admin/login", "dest": "/api/admin/login.js" },
    { "src": "/api/(.*)", "dest": "/api/[...path].js" },
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
} 