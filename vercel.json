{
  "version": 2,
  "builds": [
    {
      "src": "fitness-tracker/Client/gym/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist",
        "buildCommand": "bash ./fitness-tracker/Client/gym/vercel-build.sh"
      }
    },
    {
      "src": "fitness-tracker/Server/server.js",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/fitness-tracker/Server/server.js" },
    { "source": "/assets/:path*", "destination": "/assets/:path*" },
    { "source": "/images/:path*", "destination": "/images/:path*" },
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    }
  ]
} 